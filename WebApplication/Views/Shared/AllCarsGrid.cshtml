@model WebApplication.Data.Models.Advertisement
@{
    <div class="item col-6 col-lg-4 col-xl-3 text-start">
        <div class="row mt-4">
            <div class="col-5">
                <span class="text-truncate" style="font-family: Calibri,serif; color: #5c636a;">@Model.IdentityUser.UserName</span>
            </div>
            <div class="col-7 text-end text-truncate">
                <span style="font-family: Calibri,serif; color: #5c636a;">@Model.Date.ToString("D")</span>
            </div>
        </div>
        <a href="/Catalog/@Model.Id/">
            <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name">
            <h4 class="text-dark text-truncate">@Model.Name</h4>
        </a>
        <div class="row mt-md-4">
            <div class="col-6">
                <span class="text-truncate" style="font-family: Tahoma,serif">@Model.Price.ToString("C0")</span>
            </div>
            <div class="col-6 text-end">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16" style="margin-bottom: 2px">
                  <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                  <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                </svg>
                @Model.CountViews
            </div>
        </div>
    </div>
}