@model EnterNewPasswordViewModel;
<div class="col-md-8">
    <h3>Смена пароля</h3>
    <form asp-action="NewPassword" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PasswordConfirm"></label>
                <input asp-for="PasswordConfirm" class="form-control"/>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <input name="Email" type="hidden" value="@Model.Email">
            <input name="Code" type="hidden" value="@Model.Code">
            <input class=" btn shadow-none btn-success" type="submit" value="Сменить пароль">
        </div>
    </form>
</div>